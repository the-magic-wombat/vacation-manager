@model API.Models.ViewModels.Roles.RolesDetailsVM

@{
    ViewBag.Title = "Role Details";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">@Model.Name Details</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Username</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <th>
                                    <a href="@Url.Action("Details", "Users", new {Id = item.Id})" class="btn btn-info btn-icon-split">
                                        <span class="text">Details</span>
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
