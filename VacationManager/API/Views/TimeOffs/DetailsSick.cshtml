@model API.Models.ViewModels.TimeOffs.SickTimeOff.SickTimeOffsDetailsVM

@{
    ViewBag.Title = "Details STO";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">STO's details</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>Last changed</td>
                            <td>@Model.LastChangedOn</td>
                            <td>
                                <a href="@Url.Action("DownloadAttachment", "TimeOffs", new {Id = Model.Id})" class="btn btn-info btn-icon-split">
                                    <span class="text">Download attachment</span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>From</td>
                            <td>@Model.From</td>
                            <td>
                                <a href="@Url.Action("EditSick", "TimeOffs", new {Id = Model.Id})" class="btn btn-warning btn-icon-split">
                                    <span class="text">Edit</span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>To</td>
                            <td>@Model.To</td>
                            <td>
                                <a href="@Url.Action("DeleteSick", "TimeOffs", new {Id = Model.Id})" class="btn btn-danger btn-circle">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Approved</td>
                            <td>@Model.IsApproved</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->