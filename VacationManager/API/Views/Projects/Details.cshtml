@model API.Models.ViewModels.Projects.ProjectsDetailsVM

@{
    ViewBag.Title = "Project Details";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">@Model.Name's details</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>@Model.Name</td>
                            <td>
                                <a href="@Url.Action("Edit", "Projects", new {Id = Model.Id})" class="btn btn-warning btn-icon-split">
                                    <span class="text">Edit</span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>@Model.Description</td>
                            <td>
                                <a href="@Url.Action("Delete", "Projects", new {Id = Model.Id})" class="btn btn-danger btn-circle">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Teams</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Team Lead</th>AssignDeveloper
                            <th>Team size</th>
                            <th></th>
                            <th>
                                <a href="@Url.Action("AssignTeam", "Projects", new {Id = Model.Id})" class="btn btn-success btn-icon-split">
                                    <span class="text">Assign new Team</span>
                                </a>
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Team Lead</th>
                            <th>Team size</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Teams)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.TeamLeadName</td>
                                <td>@item.TeamSize</td>
                                <th>
                                    <a href="@Url.Action("Details", "Teams", new {Id = item.Id})" class="btn btn-info btn-icon-split">
                                        <span class="text">Details</span>
                                    </a>
                                </th>
                                <th>
                                    @*TODO: Make it work*@
                                    <a href="@Url.Action("RemoveDeveloper", "Teams", new {Id = item.Id, @teamId = Model.Id})" class="btn btn-warning btn-icon-split">
                                        <span class="text">Remove Team</span>
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
